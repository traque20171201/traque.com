<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6 bg-light">
    <h2><%= t('signup') %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group row">
        <%= f.label :username, class: "col-md-3 col-form-label font-weight-bold" %>
        <div class="col-md-9">
          <%= f.text_field :username, autofocus: true, autocomplete: "username", required: true, class: "form-control" %>
        </div>
      </div>

      <div class="field form-group row">
        <%= f.label :firstname, class: "col-md-3 col-form-label font-weight-bold" %>
        <div class="col-md-9">
          <%= f.text_field :firstname, autocomplete: "firstname", required: true, class: "form-control" %>
        </div>
      </div>

      <div class="field form-group row">
        <%= f.label :lastname, class: "col-md-3 col-form-label font-weight-bold" %>
        <div class="col-md-9">
          <%= f.text_field :lastname, autocomplete: "lastname", required: true, class: "form-control" %>
        </div>
      </div>

      <div class="field form-group row">
        <%= f.label :email, class: "col-md-3 col-form-label font-weight-bold" %>
        <div class="col-md-9">
          <%= f.email_field :email, autocomplete: "email", required: true, class: "form-control" %>
        </div>
      </div>

      <div class="field form-group row">
        <%= f.label :password, class: "col-md-3 col-form-label font-weight-bold" %>
        <div class="col-md-9">
          <%= f.password_field :password, autocomplete: "new-password", required: true, class: "form-control" %>
        </div>
      </div>

      <div class="field form-group row">
        <div class="col-md-3"></div>
        <div class="col-md-9">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, class: "form-control", placeholder: t('password_confirmation') %>
        </div>
      </div>

      <div class="field form-group row">
        <%= f.label :phone, class: "col-md-3 col-form-label font-weight-bold" %>
        <div class="col-md-9">
          <%= f.telephone_field :phone, autocomplete: "phone", class: "form-control" %>
        </div>
      </div>

      <div class="field form-group row">
        <%= f.label :birthday, class: "col-md-3 col-form-label font-weight-bold" %>
        <div class="col-md-9">
          <%= f.date_field :birthday, autocomplete: "phone", class: "form-control" %>
        </div>
      </div>

      <div class="field form-group row">
        <%= f.label :sex, class: "col-md-3 col-form-label font-weight-bold" %>
        <div class="col-md-3">
          <%= f.select :sex, User.sexes.keys.map { |k| [I18n.t("activerecord.attributes.user.sexes.#{k}"), k] }, {}, {:class => "form-control"} %>
        </div>
        <div class="col-md-6">
        </div>
      </div>

      <div class="actions">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <div class="col-md-3"></div>
</div>