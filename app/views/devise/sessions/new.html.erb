<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4 bg-light">
    <h2><%= t('signin') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <p>
        <%= f.text_field :login, autofocus: true, autocomplete: "login", class: 'form-control', placeholder: t('account'), required: true %>
      </p>

      <p>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: t('password'), required: true %>
      </p>

      <% if devise_mapping.rememberable? %>
        <p>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: 'form-check-label' %>
        </p>
      <% end %>

      <%= f.submit t('login.submit'), class: 'btn btn-lg btn-primary btn-block' %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <div class="col-md-4"></div>
</div>