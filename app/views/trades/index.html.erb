<div class="table-responsive">
  <h2>Trades</h2>
  <table id="tradesListTable" class="table table-bordered table-hover table-light">
    <thead class="thead-light text-center">
      <tr>
        <th scope="col">Tradingdate</th>
        <th scope="col">Tradingtype</th>
        <th scope="col">Volume</th>
        <th scope="col">Price</th>
        <th scope="col">Money</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @trades.each do |trade| %>
        <tr>
          <td scope="row" class="text-center"><%= trade.tradingDate %></td>
          <td scope="row"><%= trade.tradingType %></td>
          <td scope="row" class="text-right"><%= number_with_delimiter(trade.volume) %></td>
          <td scope="row" class="text-right"><%= number_with_delimiter(trade.price) %></td>
          <td scope="row" class="text-right"><%= number_with_delimiter(trade.money) %></td>
          <td scope="row"><%= link_to 'Show', trade, class: "btn btn-sm btn-primary" %></td>
          <td scope="row"><%= link_to 'Edit', edit_trade_path(trade), class: "btn btn-sm btn-primary" %></td>
          <td scope="row"><%= link_to 'Destroy', trade, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-secondary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Trade', new_trade_path, class: "btn btn-primary" %>
</div>
